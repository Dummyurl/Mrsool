<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <FrameLayout
        android:id="@+id/fragment_map_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cons_sheet"

        >


    </FrameLayout>
    <LinearLayout
        android:id="@+id/ll_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        tools:ignore="RtlCompat"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:descendantFocusability="blocksDescendants"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_map"
            android:tint="@color/white"
            android:padding="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:clickable="false"
            android:longClickable="false"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:text="@string/view_in_map"
            android:clickable="false"
            android:longClickable="false"
            />
    </LinearLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cons_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="8dp"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginEnd="60dp"
            app:layout_constraintHorizontal_bias="0"

            tools:ignore="RtlCompat"
            />
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_name"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"
            android:textColor="@color/gray4"
            android:textSize="13sp"
            android:layout_marginEnd="15dp"
            tools:ignore="RtlCompat"
            app:layout_constraintHorizontal_bias="0"
            />

        <TextView
            android:id="@+id/tv_delegate_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_address"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/courier_in"
            android:textColor="@color/gray5"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@id/tv_delegate_count"
            app:layout_constraintTop_toBottomOf="@id/tv_address"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_delegate_count"

            />




        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_delegate_count"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="14sp"
            android:text="@string/state"
            android:textColor="@color/gray5"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_state"
            android:visibility="visible"

            />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tv_delegate_count"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="13sp"
            android:visibility="visible"
            android:layout_marginEnd="15dp"
            tools:ignore="RtlCompat"


            />

        <ImageView
            android:id="@+id/image_today"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_state"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_today"
            android:tint="@color/colorPrimary"
            android:visibility="gone"

            />
        <TextView
            android:id="@+id/tv_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/image_today"
            app:layout_constraintTop_toTopOf="@id/image_today"
            app:layout_constraintBottom_toBottomOf="@id/image_today"
            android:layout_marginStart="5dp"
            android:text="@string/today_s"
            tools:ignore="RtlCompat"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_to"
            app:layout_constraintEnd_toStartOf="@id/arrow_down"
            android:layout_marginEnd="5dp"
            tools:ignore="RtlCompat"
            android:textColor="@color/gray6"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_to"

            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/arrow_down"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_down_arrow"
            app:layout_constraintTop_toTopOf="@id/tv_to"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="6dp"
            android:layout_marginEnd="10dp"
            tools:ignore="RtlCompat"
            android:visibility="gone"

            />


        <net.cachapa.expandablelayout.ExpandableLayout
            android:id="@+id/expandedLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/arrow_down"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:el_duration="1000"
            app:el_parallax=".5"
            app:el_expanded="false"
            >

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/gray4"
                    />
                <TextView
                    android:id="@+id/tv_d1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/view"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"
                    android:text="d1"
                    android:textSize="12sp"
                    android:textColor="@color/gray6"

                    />

                <TextView
                    android:id="@+id/tv_d11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="d11"
                    android:textColor="@color/gray6"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@+id/tv_d1"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="RtlCompat"

                    />

                <TextView
                    android:id="@+id/tv_d2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_d1"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/gray6"
                    android:text="d2"

                    />
                <TextView
                    android:id="@+id/tv_d22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_d1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_d2"
                    tools:ignore="RtlCompat"
                    android:textColor="@color/gray6"
                    android:text="d22"
                    />

                <TextView
                    android:id="@+id/tv_d3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_d2"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/gray6"
                    android:text="d3"

                    />
                <TextView
                    android:id="@+id/tv_d33"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_d1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_d3"
                    tools:ignore="RtlCompat"
                    android:textColor="@color/gray6"
                    android:text="d22"
                    />

                <TextView
                    android:id="@+id/tv_d4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_d3"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/gray6"
                    android:text="d4"

                    />
                <TextView
                    android:id="@+id/tv_d44"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_d1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_d4"
                    tools:ignore="RtlCompat"
                    android:textColor="@color/gray6"
                    android:text="d44"
                    />

                <TextView
                    android:id="@+id/tv_d5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_d4"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/gray6"
                    android:text="d5"

                    />
                <TextView
                    android:id="@+id/tv_d55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_d1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_d5"
                    tools:ignore="RtlCompat"
                    android:textColor="@color/gray6"
                    android:text="d44"
                    />


                <TextView
                    android:id="@+id/tv_d6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_d5"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/gray6"
                    android:text="d5"

                    />
                <TextView
                    android:id="@+id/tv_d66"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_d1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_d6"
                    tools:ignore="RtlCompat"
                    android:textColor="@color/gray6"
                    android:text="d44"
                    />

                <TextView
                    android:id="@+id/tv_d7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_d6"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="@color/gray6"
                    android:text="d5"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"

                    />
                <TextView
                    android:id="@+id/tv_d77"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tv_d1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/tv_d7"
                    tools:ignore="RtlCompat"
                    android:textColor="@color/gray6"
                    android:text="d44"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="8dp"
                    />

            </android.support.constraint.ConstraintLayout>
        </net.cachapa.expandablelayout.ExpandableLayout>
    </android.support.constraint.ConstraintLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:src="@drawable/ic_add"
        android:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/cons_sheet"
        app:layout_constraintBottom_toTopOf="@id/cons_sheet"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        tools:ignore="RtlCompat" />

</android.support.constraint.ConstraintLayout>